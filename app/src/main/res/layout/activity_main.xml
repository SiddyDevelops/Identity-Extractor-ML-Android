<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_text"
        android:textColor="@color/black"
        android:id="@+id/title_text"
        android:padding="16dp"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_regular"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/aadhaarCardView"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:elevation="8dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/blue_light"
                android:onClick="openRelevantActivity"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:background="@color/blue_dark"
                        android:src="@drawable/fingerprint_vc"
                        android:padding="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_marginStart="24dp"
                        android:layout_gravity="center_vertical"
                        android:text="Aadhaar\nCard"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/poppins_black"
                        android:textSize="24sp"
                        android:letterSpacing="0.2"
                        android:includeFontPadding="false"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/panCardView"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:elevation="8dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/yellow_light"
                android:onClick="openRelevantActivity"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:background="@color/yellow_dark"
                        android:src="@drawable/pan_card_vc"
                        android:padding="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_marginStart="24dp"
                        android:layout_gravity="center_vertical"
                        android:text="Pan\nCard"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/poppins_black"
                        android:textSize="24sp"
                        android:letterSpacing="0.2"
                        android:includeFontPadding="false"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/idCardView"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:elevation="8dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/red_light"
                android:onClick="openRelevantActivity"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:background="@color/red_dark"
                        android:src="@drawable/id_card_vc"
                        android:padding="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_marginStart="24dp"
                        android:layout_gravity="center_vertical"
                        android:text="Generic\nID Card"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/poppins_black"
                        android:textSize="24sp"
                        android:letterSpacing="0.2"
                        android:includeFontPadding="false"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </ScrollView>



</RelativeLayout>